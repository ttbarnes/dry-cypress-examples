{
  "extends": [
    "airbnb-base",
    "prettier",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "info"
        ]
      }
    ]
  },
  "env": {
    "es6": true
  },
  "root": true,
  "plugins": [
    "autofix",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "@babel/eslint-parser",
    "requireConfigFile": false
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  }
}
